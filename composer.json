{
  "name": "sgrichards/drupal-startup",
  "description": "Startup template for Drupal 8 projects.",
  "type": "project",
  "license": "GPL-2.0+",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "discard-changes": true,
    "secure-http": false,
    "bin-dir": "bin/"
  },
  "repositories": {
    "drupal": {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    "drush-module-sync": {
      "type": "path",
      "url": "src/drush/drush-module-sync"
    }
  },
  "require-dev": {
    "behat/mink": "~1.7",
    "behat/mink-goutte-driver": "~1.2",
    "jcalderonzumba/gastonjs": "~1.0.2",
    "mikey179/vfsStream": "~1.2",
    "phpunit/phpunit": "~4.8",
    "drush/drush": "^8.1",
    "drupal/drupal-extension": "~3.3.0",
    "behat/behat": "^3.0",
    "drupal/coder": "~8.2.0",
    "squizlabs/php_codesniffer": "^2.0",
    "drupal/console": "1.0.1",
    "phpmd/phpmd": "2.6.0",
    "drupal/devel": "1.2"
  },
  "require": {
    "cweagans/composer-patches": "^1.5.0",
    "composer/installers": "^1.0",
    "oomphinc/composer-installers-extender": "^1.1",
    "drupal-composer/drupal-scaffold": "^2.0.0",
    "kporras07/composer-symlinks": "^0.1.0@dev",
    "sgrichards/drush-module-sync": "*",
    "drupal/core": "8.4.3",
    "drupal/admin_toolbar": "1.18",
    "drupal/ctools": "3.0",
    "drupal/embed": "1.0.0",
    "drupal/entity": "1.0-alpha4",
    "drupal/entity_browser": "1.0.0-alpha9",
    "drupal/field_group": "1.0-rc6",
    "drupal/inline_entity_form": "1.0-beta1",
    "drupal/linkit": "4.3.0",
    "drupal/metatag": "1.0",
    "drupal/pathauto": "1.0-rc1",
    "drupal/seckit": "1.0-alpha2",
    "drupal/token": "1.0-beta2",
    "drupal/redirect": "1.0-alpha4",
    "drupal/xmlsitemap": "1.0-alpha2",
    "drupal/ape": "1.1.0",
    "drupal/environment_indicator": "3.0.0",
    "drupal/stage_file_proxy": "1.0-alpha2",
    "drupal/ultimate_cron": "2.0-alpha1",
    "drupal/entity_embed": "1.0-beta2",
    "drupal/redis": "1.0-rc2",
  },
  "scripts": {
    "post-install-cmd": [
      "@composer drupal-scaffold",
      "@composer links"
    ],
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "links": "Kporras07\\ComposerSymlinks\\ScriptHandler::createSymlinks"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "extra": {
    "enable-patching": true,
    "patches": {
      "drupal/core": {
        "Ignores definition changes for fields with custom storage": "https://www.drupal.org/files/issues/entity-definitions-removed-custom-storage-2673628-2.patch",
        "Fix for bug in EntityTestWithBundle https://www.drupal.org/node/2764377": "https://www.drupal.org/files/issues/entity_test-EntityTestWithBundle_form_handler_class_declaration-2764377-15.patch",
        "Fix AJAX error with the uploadprogress issue": "https://www.drupal.org/files/issues/core-progressbar-fix-2662932-45.patch",
        "Clean up user input for exposed checkboxes": "https://www.drupal.org/files/issues/2687773-18-Cleanup-user-input-for-checkboxes-8.1.patch"
      }
    },
    "installer-paths": {
      "docroot/core": [
        "type:drupal-core"
      ],
      "docroot/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "docroot/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "docroot/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "docroot/drush/contrib/{$name}": [
        "type:drupal-drush"
      ],
      "docroot/libraries/{$name}": [
        "type:drupal-library"
      ]
    },
    "symlinks": {
      "src/modules": "docroot/modules/custom",
      "src/themes": "docroot/themes/custom",
      "src/sites": "docroot/sites",
      "src/profiles": "docroot/profiles/custom"
    }
  }
}
